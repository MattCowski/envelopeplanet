doctype html
html(lang="en")

  head
    meta(charset="utf-8")
    meta(name="viewport" content="initial-scale=1, maximum-scale=1, user-scalable=no, width=device-width")
    title EnvelopePlanet
    link(href="lib.css" rel="stylesheet")
    link(href="app.css" rel="stylesheet")

  body(ng-app="angular")

    .navbar.navbar-default.navbar-fixed-top(role='navigation', bs-navbar='')
      .navbar-header
        a.navbar-brand(href='#') EnvelopePlanet
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
      #bs-example-navbar-collapse-1.collapse.navbar-collapse
        ul.nav.navbar-nav
          li(data-match-route='^/$')
            a(href='#/') Home
          li(data-match-route='/faq')
            a(href='#/faq') FAQ

        ul.nav.navbar-nav(ng-if="account.roleValue >= 20")
          li(data-match-route='/page-two.*')
            a(href='#/page-two/sub-a') Page Two
        ul.nav.navbar-nav.navbar-right
          li(data-match-route='/users.*')
            a(ng-href='#/users/{{user.uid}}') Profile 
          //- li(data-match-route='/messages.*')
          //-   a(ng-href='#/messages/{{user.uid}}') Messages 
          //-     span.badge {{unreadMessages}}
          //- li(data-match-route='/projects')
          //-   a(href='#/projects') Projects
          li(data-match-route='/files')
            a(href='#/files') Files
          li(data-match-route='/login')
            a(href='#/login') login



